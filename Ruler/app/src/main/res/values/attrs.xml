<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RulerView">
        <attr name="unit" format="enum">
            <enum name="inch" value="0"/>
            <enum name="cm" value="1"/>
        </attr>

        <attr name="guideScaleTextSize" format="dimension" /><!--刻度对应文字大小-->
        <attr name="graduatedScaleWidth" format="dimension" /><!--刻度粗细-->
        <attr name="graduatedScaleBaseLength" format="dimension" /><!--刻度长度-->
        <attr name="scaleColor" format="color" /><!--文字颜色-->
        <attr name="scaleUnit" format="color" /><!--文字单位-->

        <attr name="backgroundColor" format="color" />
        <attr name="resPointer" format="reference|color" />

    </declare-styleable>
</resources>